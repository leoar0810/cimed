<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            eventClick: function(info) {
                alert('Event: ' + info.event.title);
                alert('Coordinates: ' + info.jsEvent.pageX + ',' + info.jsEvent.pageY);
                alert('View: ' + info.view.type);

                // change the border color just for fun
                info.el.style.borderColor = 'red';
            },
            headerToolbar: {
                center: 'addEventButton'
            },
            customButtons: {
                addEventButton: {
                    text: 'Add new',
                    click: function() {
                        var dateStr = prompt('Enter a date in YYYY-MM-DD format');
                        var date = new Date(dateStr + 'T00:00:00'); // will be in local time
                        var end = new Date(dateStr + 'T00:30:00');
                        if (!isNaN(date.valueOf())) { // valid?
                            calendar.addEvent({
                                title: 'dynamic event',
                                start: date,
                                end: end,
                                allDay: false
                            });
                            alert('Great. Now, update your database...');
                        } else {
                            alert('Invalid date.');
                        }
                    }
                }
            },
            initialView: 'dayGridMonth',
            initialDate: '2021-11-07',
            // headerToolbar: {
                // left: 'prev,next today',
                // center: 'title',
                // right: 'dayGridMonth,timeGridWeek,timeGridDay'
            // },
            events: [
                {
                    title: 'All Day Event',
                    start: '2021-11-01'
                },
                {
                    title: 'Long Event',
                    start: '2021-11-07',
                    end: '2021-11-10'
                },
                {
                    groupId: '999',
                    title: 'Repeating Event',
                    start: '2021-11-09T16:00:00'
                },
                {
                    groupId: '999',
                    title: 'Repeating Event',
                    start: '2021-11-16T16:00:00'
                },
                {
                    title: 'Conference',
                    start: '2021-11-11',
                    end: '2021-11-13'
                },
                {
                    title: 'Meeting',
                    start: '2021-11-12T10:30:00',
                    end: '2021-11-12T12:30:00'
                },
                {
                    title: 'Lunch',
                    start: '2021-11-12T12:00:00'
                },
                {
                    title: 'Meeting',
                    start: '2021-11-12T14:30:00'
                },
                {
                    title: 'Birthday Party',
                    start: '2021-11-13T07:00:00'
                },
                {
                    title: 'Click for Google',
                    url: 'http://google.com/',
                    start: '2021-11-28'
                }
            ]
        });

        calendar.render();
    });
</script>

